<?xml version="1.0" encoding="utf-8"?>
<com.tcl.sourcelist.bean.OdmSourceItem 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sourceitem_linear"   
    android:layout_width="450px"
    android:layout_height="76px" 
    android:layout_marginLeft="0px"
 
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/sourceitem_linear2"   
        android:layout_width="450px"
        android:layout_height="76px"
        android:layout_marginTop="0px"
        android:background="@drawable/bgmiddle"
        android:orientation="horizontal" >
        

        <ImageView
            android:id="@+id/imagesource"
            android:layout_width="58.5px"
            android:layout_height="wrap_content"
            android:layout_marginTop="3px"
            android:layout_marginLeft="40px">                        
        </ImageView>

        <TextView
            android:id="@+id/sourceitem"
            android:layout_width="157.5px"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="55px"
            android:layout_marginTop="7.5px"
            android:textColor="@color/white"
            android:textSize="35px">
        </TextView>
        
        
        <!--EditText  
        android:id="@+id/source_edit"  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:singleLine="true"
       android:focusable="true"
        android:maxLength="5"--> 
        
  <!--Button
			android:text="@string/alert_ok"
			android:id="@+id/source_edit"
			android:textSize="18sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:layout_marginLeft="10px"
			android:background="@drawable/button_selector">
      
  </Button-->        
    
   <TextView
            android:id="@+id/source_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:layout_marginTop="7.5px"
            android:ellipsize="marquee" 
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"  
            android:textColor="@color/white"
            android:textSize="35px">
   </TextView>
    
    <EditText
            android:id="@+id/source_edit_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1px"
            android:layout_marginTop="7.5px"            
			android:maxLength="8"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="35px"
            android:imeOptions="actionDone|flagNoFullscreen"/>
       
    </LinearLayout>

</com.tcl.sourcelist.bean.OdmSourceItem>
