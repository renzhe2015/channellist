<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800.0px"
    android:layout_height="match_parent"
    android:id="@+id/ch_list_content_view">

    <TextView
        android:id="@+id/fake_listview_image"
        android:layout_width="346.6667px"
        android:layout_height="match_parent"
        android:layout_gravity="left|center"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/fast_change_channel_list_layout"
        android:layout_width="346.6667px"
        android:layout_height="match_parent"
        android:layout_gravity="left|center"
        android:background="@drawable/channel_list_background"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70px"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="@drawable/channel_left_arrow"/>
        <TextView
            android:id="@+id/ch_type"
            android:layout_width="100.0px"
            android:layout_height="30.0px"
            android:textSize="16.5px"
            android:gravity="center"
            android:background="@drawable/title_bottom"
            android:text="@string/channellist_all" />
         <ImageView 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="@drawable/channel_right_arrow"/>
        </LinearLayout>
        
       <TextView
            android:layout_width="25.0px"
            android:layout_height="10.0px"
            android:layout_marginTop="5.0px"
            android:layout_marginBottom="15.0px"
            android:background="@drawable/up_arrow" />
        
        <TextView
            android:layout_width="140.0px"
            android:layout_height="2.6666667px"
            android:layout_marginBottom="8.0px"
            android:background="@drawable/horizontal_cut_line" />

        <com.tcl.netchannellist.MyListView
            android:id="@+id/fast_change_channel_listview"
            android:layout_width="280.0px"
            android:layout_height="495px"
            android:layout_gravity="center"
            android:layout_marginBottom="7.3333335px"
            android:layout_marginTop="7.3333335px"
            android:divider="@null"
            android:descendantFocusability="blocksDescendants"
            android:dividerHeight="0.0px"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" 
           />
       

        <TextView
            android:layout_width="140.0px"
            android:layout_height="2.6666667px"
            android:layout_marginBottom="8.0px"
            android:background="@drawable/horizontal_cut_line" />
        
            <TextView
            android:layout_width="25.0px"
            android:layout_height="10.0px"
            android:layout_marginTop="5.0px"
            android:layout_marginBottom="5.0px"
            android:background="@drawable/down_arrow" />

         <TextView
            android:id="@+id/channellist_tips"
            android:layout_width="wrap_content"
            android:textSize="18px"
            android:layout_marginLeft="5.0px"
            android:layout_height="wrap_content"
             /> 
    </LinearLayout> 

    <TextView
        android:id="@+id/ch_list_left_arrow"
        android:layout_width="10.666667px"
        android:layout_height="16.666668px"
        android:layout_gravity="left|center"
        android:layout_marginLeft="24.666668px"
        android:visibility="invisible"
        android:background="@drawable/left_arrow" />

    <TextView
        android:id="@+id/ch_list_right_arrow"
        android:layout_width="10.666667px"
        android:layout_height="16.666668px"
        android:layout_gravity="left|center"
        android:visibility="invisible"
		android:layout_marginLeft="314.6667px"
        android:background="@drawable/right_arrow" />

    <LinearLayout
        android:id="@+id/listview_focus_image_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/listview_focus_image"
            android:layout_width="333.33334px"
            android:layout_height="53.333336px"
            android:layout_marginLeft="3.3333335px"
            android:visibility="gone"
            android:background="@drawable/channel_focus" />
        <LinearLayout
            android:id="@+id/menu_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.3333335px"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
